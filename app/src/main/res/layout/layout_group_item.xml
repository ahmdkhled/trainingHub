<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="group"
            type="com.example.traininghub.models.Group" />
        <variable
            name="image"
            type="String" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/group_image"
            android:src="@{image}"
            tools:src="@color/colorAccent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <com.example.traininghub.helpers.GrostesqueTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/group_name"
            android:text="@{group.title}"
            tools:text="@string/dummy_group_name"
            app:layout_constraintTop_toBottomOf="@id/group_image"
            android:gravity="center"
            android:textStyle="bold"
            />

        <com.example.traininghub.helpers.GrostesqueTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{group.start}"
            tools:text="@string/dummy_group_startdate"
            app:layout_constraintTop_toBottomOf="@id/group_name"
            android:gravity="center"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>